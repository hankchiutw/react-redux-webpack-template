{
  "name": "react-redux-webpack-template",
  "version": "1.0.0",
  "description": "Simple SPA using react, redux and webpack",
  "main": "src/index.js",
  "config": {},
  "scripts": {
    "start": "webpack-dev-server --progress --color --content-base docs/ --open --hot --inline",
    "test": "jest --no-cache --verbose --updateSnapshot",
    "build": "NODE_ENV=prod webpack --progress --color",
    "build:detail": "NODE_ENV=prod webpack --display-error-details --display-reasons --display-modules"
  },
  "keywords": [
    "react",
    "redux",
    "webpack",
    "jest"
  ],
  "author": "Hank Chiu",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.8",
    "angular-local-storage": "^0.5.0",
    "angular-sanitize": "^1.5.9",
    "angular-ui-router": "^0.3.2",
    "ngreact": "^0.3.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "showdown": "^1.5.0",
    "webpack": "<3.0.0",
    "webpack-dev-server": "<3.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15.4": "^1.0.5",
    "enzyme-to-json": "^3.3.3",
    "jest": "^22.4.3",
    "jest-css-modules": "^1.1.0",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.13.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "./tests/setup/jestSetup.js"
    ],
    "modulePaths": [
      "<rootDir>/",
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|md)$": "<rootDir>/tests/setup/fileTransformer.js"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ]
  }
}
